#!/usr/bin/env node

var packagejson = require('../package.json');

var program = require('commander');

program
  .version(packagejson.version)
  .option('-p, --port <port>', 'which port to use, default is 5000')
  .option('-d, --dir <dir>', 'which dir to serve, default is which dir you call `adsf`')
  .parse(process.argv);

var server = require('../');

server.startServer(program.port, program.dir);
